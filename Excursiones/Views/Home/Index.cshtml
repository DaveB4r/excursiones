@model ExcursionModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
    {
        <div class="alert alert-success">
            @ViewBag.SuccessMessage
        </div>
    }
    <div class="card mx-auto" style="width: 18rem;">
        <div class="card-header">
            Excursiones App
        </div>
        <div class="card-body">
            <small>La siguiente aplicación te indicara el conjunto de elementos optimos para tus excursiones</small>
            <form asp-action="Calcular" asp-controller="Home" method="post">
                <div class="form-group">
                    <label for="minimoCaloriasInput">Minimo de calorias</label>
                    <input type="number" asp-for="minCalorias" class="form-control" id="minimoCaloriasInput" placeholder="Ex: 15">
                </div>
                <div class="form-group">
                    <label for="MaximoPesoInput">Peso Maximo</label>
                    <input type="number" asp-for="maxPeso" class="form-control" id="MaximoPesoInput" placeholder="Ex: 10">
                </div>
                <button type="submit" class="btn btn-primary mt-4">Calcular</button>
            </form>
        </div>
    </div>
    <div class="card mt-2">
        <div class="card-header">
            <h4>Guía</h4>  
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Elemento</th>
                        <th scope="col">Peso</th>
                        <th scope="col">Calorias</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">E1</th>
                        <td>5</td>
                        <td>3</td>
                    </tr>
                    <tr>
                        <th scope="row">E2</th>
                        <td>3</td>
                        <td>5</td>
                    </tr>
                    <tr>
                        <th scope="row">E3</th>
                        <td>5</td>
                        <td>2</td>
                    </tr>
                    <tr>
                        <th scope="row">E4</th>
                        <td>1</td>
                        <td>8</td>
                    </tr>
                    <tr>
                        <th scope="row">E5</th>
                        <td>2</td>
                        <td>3</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
